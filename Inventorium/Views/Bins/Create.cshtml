@model InventoriumLib.PartsBin

@{
    ViewData["Title"] = "New Bin";
}

<h2>Add a Bin</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <!-- TODO: Allow selection of a rack or to create a new rack in a new tab/window -->
            <div class="form-group">
                <label asp-for="RackIndexX" class="control-label"></label>
                <input asp-for="RackIndexX" class="form-control" />
                <span asp-validation-for="RackIndexX" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RackIndexY" class="control-label"></label>
                <input asp-for="RackIndexY" class="form-control" />
                <span asp-validation-for="RackIndexY" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RackIndexZ" class="control-label"></label>
                <input asp-for="RackIndexZ" class="form-control" />
                <span asp-validation-for="RackIndexZ" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
