@model Nventorium.Models.BinViewModel

@{
    ViewData["Title"] = "New Bin";
}

<h2>Add a Bin</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Racks</label>
                <select asp-for="SelectedRackID" class="form-control">
                    @foreach (var rack in Model.Racks)
                    {
                        <option value=@rack.ID>@rack.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="RackIndexX" class="control-label"></label>
                <input asp-for="RackIndexX" class="form-control" />
                <span asp-validation-for="RackIndexX" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RackIndexY" class="control-label"></label>
                <input asp-for="RackIndexY" class="form-control" />
                <span asp-validation-for="RackIndexY" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RackIndexZ" class="control-label"></label>
                <input asp-for="RackIndexZ" class="form-control" />
                <span asp-validation-for="RackIndexZ" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Bin List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
