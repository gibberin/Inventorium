@model IEnumerable<InventoriumLib.PartsBin>

@{
    ViewData["Title"] = "Bins";
}

<h2>Bins</h2>

<p>
    <a asp-action="Create">Add a Bin</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rack)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var bin in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => bin.Name)
                </td>
                <td>
                    <a asp-controller="Racks" asp-action="Details" asp-route-id="@bin.Rack.ID">@Html.DisplayFor(modelItem => bin.Rack.Name)</a> (@Html.DisplayFor(modelItem => bin.RackIndexX), @Html.DisplayFor(modelItem => bin.RackIndexY), @Html.DisplayFor(modelItem => bin.RackIndexZ))
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@bin.ID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@bin.ID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@bin.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
